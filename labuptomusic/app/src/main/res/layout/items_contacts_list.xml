<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_item_contact_img"
            android:layout_width="105dp"
            android:layout_height="@dimen/dimens_image"
            android:background="@android:drawable/sym_def_app_icon"
            android:padding="@dimen/margin_pad_5"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:id="@+id/tv_item_contact_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_pad_10"
            android:gravity="center|left"
            android:text="User Name"
            android:textSize="@dimen/txt_size_large" />
    </LinearLayout>
</RelativeLayout>